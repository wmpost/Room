<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Room.ManageController">
   <children>
      <ImageView fitHeight="150.0" fitWidth="850.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Resources/logo.PNG" />
         </image>
      </ImageView>
      <Label fx:id="lblLogout" layoutX="716.0" layoutY="74.0" onMouseEntered="#growText" onMouseExited="#shrinkText" onMousePressed="#goToLoggedOut" text="Log Out" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TableView fx:id="tblRes" layoutX="27.0" layoutY="317.0" prefHeight="314.0" prefWidth="628.0">
      </TableView>
      <Label layoutX="208.0" layoutY="146.0" prefHeight="58.0" prefWidth="430.0" text="UMW Room Reservation Calendar &amp; Reservation Management" wrapText="true">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="60.0" layoutY="182.0" prefHeight="102.0" prefWidth="756.0" text="Use the menu below to view reservations for the selected date. All registered users may like any reservation. Students can delete their own reservations. Faculty and staff can delete their reservations along with student reservations. Administrators can delete any reservation. " textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <ImageView fx:id="likebtn" fitHeight="83.0" fitWidth="169.0" layoutX="668.0" layoutY="514.0" onMousePressed="#LikeButton" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Resources/88_facebook_like_button_big.jpeg" />
         </image>
      </ImageView>
      <DatePicker fx:id="dpCal" layoutX="346.0" layoutY="280.0" onAction="#fillTable" prefHeight="25.0" prefWidth="184.0" />
      <Button fx:id="btnDelRes" layoutX="663.0" layoutY="444.0" mnemonicParsing="false" onAction="#DeleteButtonAction" prefHeight="25.0" prefWidth="177.0" text="Delete Selected Reservations" />
      <Button fx:id="btnReturn" layoutX="667.0" layoutY="602.0" mnemonicParsing="false" onAction="#goBack" prefHeight="25.0" prefWidth="173.0" text="Go Back" />
      <CheckBox fx:id="cbDeletes" layoutX="672.0" layoutY="357.0" mnemonicParsing="false" onAction="#deleteRes" prefHeight="68.0" prefWidth="157.0" text=" Click to enable/disable the ability to delete reservations" textAlignment="CENTER" wrapText="true" />
   </children>
</AnchorPane>
