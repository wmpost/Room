   <children>
      <ImageView fitHeight="150.0" fitWidth="850.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Resources/logo.PNG" />
         </image>
      </ImageView>
      <Button fx:id="btnSearch" layoutX="562.0" layoutY="500.0" mnemonicParsing="false" onAction="#goToSearch" prefHeight="30.0" prefWidth="218.0" text="Search to Reserve a Room">
