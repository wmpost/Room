            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnManage" layoutX="564.0" layoutY="540.0" mnemonicParsing="false" onAction="#goToManage" prefHeight="30.0" prefWidth="218.0" text="View &amp; Manage Reservations">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label fx:id="lblName" layoutX="510.0" layoutY="203.0" text=" " textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Button fx:id="btnDeleteUsers" layoutX="565.0" layoutY="580.0" mnemonicParsing="false" onAction="#goToDeleteUsers" prefHeight="30.0" prefWidth="218.0" text="View &amp; Delete Users">
